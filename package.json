{
  "name": "cssfmt",
  "description": "The tool applying CSS formatting guidelines.",
  "version": "0.0.1",
  "publisher": "Ilya Verbitskiy",
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cssfmt",
    "onCommand:compresscss"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "cssfmt",
        "title": "Format CSS"
      },
      {
        "command": "compresscss",
        "title": "Compress CSS"
      }
    ],
    "configuration": {
      "title": "CSS formatting tool configuration",
      "type": "object",
      "properties": {
        "cssfmt.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "Use tabs instead of spaces for indentation."
        },
        "cssfmt.indent": {
          "type": "number",
          "default": 4,
          "description": "Set indentation size."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^1.6.2",
    "vscode": "0.10.x"
  },
  "dependencies": {
    "css": "^2.2.1"
  }
}
